OBJS = MAIN.O REGION.O IOEVENT.O DLSCREEN.O LEVEL.O

DRUGLORD.EXE: $(OBJS) 
	fbc -x DRUGLORD.EXE $(OBJS)

MAIN.O: MAIN.BAS
	fbc -m MAIN -c MAIN.BAS

REGION.O: REGION.BAS
	fbc -c REGION.BAS

IOEVENT.O: IOEVENT.BAS
	fbc -c IOEVENT.BAS

DLSCREEN.O: DLSCREEN.BAS
	fbc -c DLSCREEN.BAS

LEVEL.O: LEVEL.BAS
	fbc -c LEVEL.BAS

clean:
	rm *.o
	rm *.O
	rm DRUGLORD.EXE
